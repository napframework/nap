			"Uniforms" : 
			[
				{
					"Type" : "nap::UniformTexture2D",
					"Name" : "mVideoTexture",
					"Texture" : "ColorTexture"
				}
			]
		},

		{
			"Type" : "nap::Material",
			"mID": "FrameMaterial",
			"Shader": "FrameShader",
			"VertexAttributeBindings" : 
