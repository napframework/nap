#!/usr/bin/env python

import os
from subprocess import call
import sys

project_dir = os.path.dirname(os.path.realpath(__file__))
nap_root = os.path.abspath(os.path.join(project_dir, os.pardir, os.pardir))

cmd = "/usr/bin/env python %s/tools/platform/refreshProjectByDir.py %s" % (nap_root, project_dir)
if len(sys.argv) > 1:
    cmd += ' %s' % ' '.join(sys.argv[1:])
call([cmd], shell=True)